{
  "name": "school-sms-app",
  "version": "1.0.0",
  "description": "An application built with Electron for managing school operations, including sending messages.",
  "keywords": [],
  "license": "MIT",
  "author": "Abdulrahman",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "cls && electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.iysood.school-sms",
    "productName": "School SMS",
    "files": [
      "views/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "publish": {
      "provider": "github",
      "owner": "iYsood",
      "repo": "https://github.com/iYsood/school-sms-app.git"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/favicon/favicon.ico"
    }
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "request": "^2.88.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}
